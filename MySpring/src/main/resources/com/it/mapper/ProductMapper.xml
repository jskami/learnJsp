<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.mapper.ProductMapper">
	<select id="getList" resultType="com.it.domain.ProductVO"> <!-- 이 경로로 값을 리턴 받을거야 -->
		select * from tblproduct order by p_code desc <!-- 세미콜론 안써도 돼 + 넘겨받는 값이 없으니까 #을 쓸 필요도 없지! -->
	</select>
	<!-- 멤버맵퍼에서 사용가능한 태그를 알아보자! -->
	<insert id="insert">
		insert into tblproduct (p_name, p_price)
		values (#{p_name}, #{p_price})
		
	</insert>
	<select id="read" resultType="com.it.domain.ProductVO">
		select * from tblproduct where p_code = #{p_code} 
	</select>
		
	<update id="update">
		update tblproduct set p_name = #{p_name}, p_price = #{p_price}
		where p_code = #{p_code}
	</update>
	<delete id="delete">
		delete from tblproduct where p_code = #{p_code}
	</delete>
	
</mapper>